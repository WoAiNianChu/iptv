<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/focusable_item_background"
    android:focusable="true"
    android:minHeight="40dp"
    android:paddingStart="8dp"
    android:paddingEnd="8dp" >

    <TextView
        android:id="@+id/list_item_content"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:minHeight="40dp"
        android:gravity="start|center_vertical"
        android:focusable="true"
        android:padding="4dp"
        android:focusedByDefault="true"
        android:nextFocusRight="@id/list_item_button"
        android:background="@drawable/focusable_item_background"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/list_item_button"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <ImageButton
        android:id="@+id/list_item_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="40dp"
        android:minHeight="40dp"
        android:padding="4dp"
        android:contentDescription="@string/modify_share"
        android:src="@drawable/icon_setting"
        android:background="@drawable/focusable_item_background"
        android:nextFocusLeft="@id/list_item_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/list_item_content"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>